@page
@model WebApplication1.Pages.student_feebackModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Feedback Form</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Feedback Form</h2>
        <form id="feedbackForm" asp-page="./student_feeback" method="post" onsubmit="return validateForm()">
            <div class="mb-3">
                <label for="societyIdInput" class="form-label">Society ID</label>
                <input type="text" class="form-control" id="societyIdInput" name="societyId" value="@Model.SocietyId" required>
            </div>
            <div class="mb-3">
                <label for="societyNameInput" class="form-label">Society Name</label>
                <input type="text" class="form-control" id="societyNameInput" name="societyName" value="@Model.SocietyName" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Satisfaction Rating</label><br>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="satisfactionRating" id="mostSatisfied" value="mostSatisfied">
                    <label class="form-check-label" for="mostSatisfied">Most Satisfied</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="satisfactionRating" id="satisfied" value="satisfied">
                    <label class="form-check-label" for="satisfied">Satisfied</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="satisfactionRating" id="noComment" value="noComment">
                    <label class="form-check-label" for="noComment">No Comment</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="satisfactionRating" id="notSatisfied" value="notSatisfied">
                    <label class="form-check-label" for="notSatisfied">Not Satisfied</label>
                </div>
            </div>
            <div class="mb-3">
                <label for="commentsTextarea" class="form-label">Comments</label>
                <textarea class="form-control" id="commentsTextarea" rows="3" name="comments" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit Feedback</button>
        </form>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function validateForm() {
            var checkboxes = document.querySelectorAll('input[type="checkbox"]');
            var comments = document.getElementById('commentsTextarea').value.trim();
            var societyName = document.getElementById('societyNameInput').value.trim();

            // Check if society name is filled
            if (societyName === '') {
                alert('Please provide the society name.');
                return false;
            }

            // Check if at least one checkbox is checked
            var checked = Array.prototype.slice.call(checkboxes).some(function (checkbox) {
                return checkbox.checked;
            });

            if (!checked) {
                alert('Please select at least one option.');
                return false;
            }

            // Check if comments are filled
            if (comments === '') {
                alert('Please provide comments.');
                return false;
            }

            return true;
        }
        </script>
</body>
</html>

