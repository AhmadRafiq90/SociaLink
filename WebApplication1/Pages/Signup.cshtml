@page
@model WebApplication1.Pages.SignupModel

@{
    ViewData["Title"] = "Sign Up";
    Layout = null; 
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sign Up</title>
    <style>


        body {
            font-family: Arial, sans-serif;
            background-color: skyblue;
            margin: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        .header {
            position: absolute;
            top: 0;
            left: 0;
            margin-left: 20px;
            margin-top: 40px;
            font-size: 36px;
            font-weight: bold;
            margin-bottom: 30px;
        }

        .signup-container {
            display: inline-flex;
            width: 900px;
            margin: 0 auto; /* Center the container */
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            background: linen;
            border-radius: 5px; /* Optional rounded corners */
            overflow: hidden;
        }

        .signup-image {
            flex: 1;
            display: flex; /* Use flex to center the image */
            justify-content: center;
            align-items: center;
            
        }

        .signup-image img {
            width: 100%; /* Full width of the parent */
            height: auto;
            display: block;
            margin-left: 10px;
        }

        form {
            flex: 1;
            padding: 20px;
            padding-right: 70px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: stretch;
            
        }
        .form-control {
            width: 100%;
            margin-bottom: 10px;
            padding: 8px;
            margin: 10px 0;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        label {
            font-weight: bold;
            margin-bottom: 5px;
            display: block;
        }

        .btn-primary {
            background-color: #0056b3;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            width: 40%;
            margin-bottom: 10px;
            margin-top: 10px;
            display: block;
            margin-left: 110px;
        }

        .btn-primary:hover {
            background-color: #00408b;
        }

        .text-danger {
            color: #dc3545;
        }

        a {
            color: #0056b3;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }

        .login-link-container {
            text-align: center;
            width: 100%;
            margin-bottom: 10px;
            margin-left: 10px;
        }

    </style>
</head>
<body>

    <div class="header">
        <strong>SociaLink</strong>
    </div>

    <div class="signup-container">

        <div class="signup-image">
            <img src="socialinklogo.jpg" alt="SociaLink Logo">
        </div>

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div>
            <label asp-for="Input.Email">Email</label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Input.Password">Password</label>
            <input asp-for="Input.Password" class="form-control" type="password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
            <input asp-for="Input.ConfirmPassword" class="form-control" type="password" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Input.FirstName">First Name</label>
            <input asp-for="Input.FirstName" class="form-control" />
            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Input.LastName">Last Name</label>
            <input asp-for="Input.LastName" class="form-control" />
            <span asp-validation-for="Input.LastName" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Input.Role">Role</label>
            <select asp-for="Input.Role" class="form-control">
                <option value="">Select a role</option>
                <option value="Student">Student</option>
                <option value="SocietyHead">Society Head</option>
                <option value="Admin">Admin</option>
            </select>
            <span asp-validation-for="Input.Role" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Sign Up</button>

            <div class="login-link-container">
                <p>
                    Already have an account?
                    <a asp-page="/Login" asp-route-returnUrl="@Url.Page("/Index")">Log in</a>
                </p>
            </div>
    </form>


</body>
</html> 



