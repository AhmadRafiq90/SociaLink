@page "{societyId:int}/{societyName}"

@model WebApplication1.Pages.ViewFeedbackModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.SocietyName Feedback Blocks</title>
    <style>
        /* Style for each block */
        .block {
            width: 300px;
            border: 1px solid #ccc;
            margin: 10px;
            padding: 10px;
            box-sizing: border-box;
            float: left;
        }
        /* Clear floating elements */
        .clearfix::after {
            content: "";
            clear: both;
            display: table;
        }

        .block p {
            margin: 5px 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>@Model.SocietyName Feedback Blocks</h1>
        <div class="clearfix">
            @foreach (var feedback in Model.FeedbackList.OrderByDescending(f => f.FeedbackDate))
            {
                <div class="block">
                    <h2>Feedback ID: @feedback.Id</h2>
                    <p><strong>Student ID:</strong> @feedback.StudentId</p>
                    <p><strong>Feedback Date:</strong> @feedback.FeedbackDate.ToString("yyyy-MM-dd HH:mm:ss")</p>
                    <p><strong>Rating:</strong> @feedback.AverageRating </p>

                    @if (!string.IsNullOrEmpty(feedback.Comments))
                    {
                        <p><strong>Comments:</strong> @feedback.Comments</p>
                    }
                </div>
            }
        </div>
    </div>
</body>
</html>